<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewThanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/place_order_thank_you"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewOrderCompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/place_order_completed"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonPlaceOrderConfirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="3dp"
        android:text="@string/place_order_confirm"
        android:textColor="#009688"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>